<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_cadastro_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="CADASTRO DA EMPRESA"
        android:textColor="@color/edittext_color"
        android:textSize="15sp"
        android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_nome_empresa"
        app:layout_constraintTop_toBottomOf="@id/tv_title_cadastro_empresa"
        android:layout_marginTop="150dp"
        android:hint="@string/nome_da_empresa"
        android:textColorHint="@color/edittext_color"
        android:layout_marginLeft="@dimen/margin_bordas"
        android:layout_marginRight="@dimen/margin_bordas"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_endereço_empresa"
        app:layout_constraintTop_toBottomOf="@id/et_nome_empresa"
        android:layout_marginTop="50dp"
        android:hint="@string/endere_o_da_empresa"
        android:textColorHint="@color/edittext_color"
        android:layout_marginLeft="@dimen/margin_bordas"
        android:layout_marginRight="@dimen/margin_bordas"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_telefone_empresa"
        app:layout_constraintTop_toBottomOf="@id/et_endereço_empresa"
        android:layout_marginTop="50dp"
        android:hint="@string/telefone_da_empresa"
        android:textColorHint="@color/edittext_color"
        android:layout_marginLeft="@dimen/margin_bordas"
        android:layout_marginRight="@dimen/margin_bordas"/>

    <Button
        android:id="@+id/btn_cadastrar_dados_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_telefone_empresa"
        android:background="@drawable/shape_cutton_escolha"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/margin_bordas"
        android:layout_marginLeft="@dimen/margin_bordas"
        android:text="@string/cadastrar_empresa"
        android:textColor="@color/edittext_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>